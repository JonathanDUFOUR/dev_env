      "// ┏━━━━━━━━━━━┓",
      "// ┃ Operators ┃",
      "// ┗━━━━━━━━━━━┛"
    ]
  },
  "Try-catch block": {
    "prefix": ["try", "tc"],
    "body": [
      // this comment is to prevent ugly single-line formatting
      "try",
      "{",
      "\t$1",
      "}",
      "catch (std::exception const &e)",
      "{",
      "\tstd::cerr << \"Exception: \" << e.what() << '\\n';",
      "}"
    ]
  }
}
