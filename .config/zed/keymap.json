// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
[
  {
    "context": "Workspace",
    "bindings": {
      "            F1  ": "command_palette::Toggle",
      "       Ctrl-Tab ": "workspace::ActivateNextPane",
      " Ctrl-Shift-Tab ": "workspace::ActivatePreviousPane",
      "        Alt-a   ": "workspace::AddFolderToProject",
      "        Alt-e   ": "project_panel::ToggleFocus",
      "       Ctrl-o   ": "workspace::OpenFiles",
      " Ctrl-Shift-p   ": "command_palette::Toggle",
      "       Ctrl-r   ": "workspace::Reload",
      "       Ctrl-s   ": "workspace::Save",
      " Ctrl-Shift-s   ": "workspace::SaveAll",
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "        Alt-Left  ": "pane::ActivatePreviousItem",
      "  Alt-Shift-Left  ": "pane::SwapItemLeft",
      "        Alt-Right ": "pane::ActivateNextItem",
      "  Alt-Shift-Right ": "pane::SwapItemRight",
      "       Ctrl-h     ": "pane::ReopenClosedItem",
      "       Ctrl-w     ": "pane::CloseActiveItem",
      " Ctrl-Shift-w     ": "pane::CloseOtherItems",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "                Escape    ": "editor::Cancel",
      "                Delete    ": "editor::Delete",
      "           Ctrl-Delete    ": "editor::DeleteToNextWordEnd",
      "            Alt-Delete    ": "editor::DeleteLine",
      "       Ctrl-Alt-Delete    ": "editor::DeleteToNextSubwordEnd",
      "                Home      ": "editor::MoveToBeginningOfLine",
      "          Shift-Home      ": "editor::SelectToBeginningOfLine",
      "                End       ": "editor::MoveToEndOfLine",
      "          Shift-End       ": "editor::SelectToEndOfLine",
      "                PageUp    ": "editor::MoveToBeginning",
      "          Shift-PageUp    ": "editor::SelectToBeginning",
      "                PageDown  ": "editor::MoveToEnd",
      "          Shift-PageDown  ": "editor::SelectToEnd",
      "                Up        ": "editor::MoveUp",
      "           Ctrl-Up        ": "editor::ConvertToUpperCase",
      "            Alt-Up        ": "editor::MoveLineUp",
      "          Shift-Up        ": "editor::SelectUp",
      "     Ctrl-Shift-Up        ": "editor::AddSelectionAbove",
      " Ctrl-Alt-Shift-Up        ": "editor::DuplicateLineUp",
      "                Down      ": "editor::MoveDown",
      "           Ctrl-Down      ": "editor::ConvertToLowerCase",
      "            Alt-Down      ": "editor::MoveLineDown",
      "          Shift-Down      ": "editor::SelectDown",
      "     Ctrl-Shift-Down      ": "editor::AddSelectionBelow",
      " Ctrl-Alt-Shift-Down      ": "editor::DuplicateLineDown",
      "                Left      ": "editor::MoveLeft",
      "           Ctrl-Left      ": "editor::MoveToPreviousWordStart",
      "          Shift-Left      ": "editor::SelectLeft",
      "       Ctrl-Alt-Left      ": "editor::MoveToPreviousSubwordStart",
      "     Ctrl-Shift-Left      ": "editor::SelectToPreviousWordStart",
      " Ctrl-Alt-Shift-Left      ": "editor::SelectToPreviousSubwordStart",
      "                Right     ": "editor::MoveRight",
      "           Ctrl-Right     ": "editor::MoveToNextWordEnd",
      "          Shift-Right     ": "editor::SelectRight",
      "       Ctrl-Alt-Right     ": "editor::MoveToNextSubwordEnd",
      "     Ctrl-Shift-Right     ": "editor::SelectToNextWordEnd",
      " Ctrl-Alt-Shift-Right     ": "editor::SelectToNextSubwordEnd",
      "                Enter     ": "editor::Newline",
      "           Ctrl-Enter     ": "editor::NewlineBelow",
      "          Shift-Enter     ": "editor::Newline",
      "     Ctrl-Shift-Enter     ": "editor::NewlineAbove",
      "                Backspace ": "editor::Backspace",
      "           Ctrl-Backspace ": "editor::DeleteToPreviousWordStart",
      "            Alt-Backspace ": "editor::DeleteLine",
      "       Ctrl-Alt-Backspace ": "editor::DeleteToPreviousSubwordStart",
      "                Tab       ": "editor::Tab",
      "           Ctrl-space     ": "editor::ShowCompletions",
      "                Menu      ": "editor::OpenContextMenu",
      "           Ctrl-a         ": "editor::SelectAll",
      "     Ctrl-Shift-a         ": "editor::SelectAllMatches",
      "           Ctrl-c         ": "editor::Copy",
      "           Ctrl-d         ": "editor::SelectNext",
      "            Alt-d         ": "editor::GoToDiagnostic",
      "     Ctrl-Shift-d         ": "editor::SelectPrevious",
      "       Ctrl-Alt-d         ": "editor::ToggleDiagnostics",
      "      Alt-Shift-d         ": "editor::GoToPreviousDiagnostic",
      "           Ctrl-e         ": "editor::SelectEnclosingSymbol",
      "           Ctrl-j         ": "editor::JoinLines",
      "           Ctrl-l         ": "editor::SelectLine",
      "           Ctrl-v         ": "editor::Paste",
      "           Ctrl-x         ": "editor::Cut",
      "           Ctrl-z         ": "editor::Undo",
      "     Ctrl-Shift-z         ": "editor::Redo",
      "           Ctrl-[         ": "editor::Outdent",
      "           Ctrl-]         ": "editor::Indent",
      "           Ctrl-{         ": "editor::Fold",
      "           Ctrl-}         ": "editor::UnfoldLines",
      "       Ctrl-Alt-{         ": "editor::FoldAll",
      "       Ctrl-Alt-}         ": "editor::UnfoldAll",
      "           Ctrl-/         ": "editor::ToggleComments",
    },
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "                F2        ":                         "editor::Rename"                                                        ,
      "                F3        ":                         "editor::GoToDefinition"                                                ,
      "                F4        ":                         "editor::FindAllReferences"                                             ,
      "                Escape    ": [ "action::Sequence", [ "editor::Cancel"                       , "editor::ScrollCursorCenter" ]],
      "                Delete    ": [ "action::Sequence", [ "editor::Delete"                       , "editor::ScrollCursorCenter" ]],
      "           Ctrl-Delete    ": [ "action::Sequence", [ "editor::DeleteToNextWordEnd"          , "editor::ScrollCursorCenter" ]],
      "            Alt-Delete    ": [ "action::Sequence", [ "editor::DeleteLine"                   , "editor::ScrollCursorCenter" ]],
      "       Ctrl-Alt-Delete    ": [ "action::Sequence", [ "editor::DeleteToNextSubwordEnd"       , "editor::ScrollCursorCenter" ]],
      "                PageUp    ": [ "action::Sequence", [ "editor::MoveToBeginning"              , "editor::ScrollCursorCenter" ]],
      "          Shift-PageUp    ": [ "action::Sequence", [ "editor::SelectToBeginning"            , "editor::ScrollCursorCenter" ]],
      "                PageDown  ": [ "action::Sequence", [ "editor::MoveToEnd"                    , "editor::ScrollCursorCenter" ]],
      "          Shift-PageDown  ": [ "action::Sequence", [ "editor::SelectToEnd"                  , "editor::ScrollCursorCenter" ]],
      "                Up        ": [ "action::Sequence", [ "editor::MoveUp"                       , "editor::ScrollCursorCenter" ]],
      "            Alt-Up        ": [ "action::Sequence", [ "editor::MoveLineUp"                   , "editor::ScrollCursorCenter" ]],
      "          Shift-Up        ": [ "action::Sequence", [ "editor::SelectUp"                     , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-Up        ": [ "action::Sequence", [ "editor::AddSelectionAbove"            , "editor::ScrollCursorCenter" ]],
      " Ctrl-Alt-Shift-Up        ": [ "action::Sequence", [ "editor::DuplicateLineUp"              , "editor::ScrollCursorCenter" ]],
      "                Down      ": [ "action::Sequence", [ "editor::MoveDown"                     , "editor::ScrollCursorCenter" ]],
      "            Alt-Down      ": [ "action::Sequence", [ "editor::MoveLineDown"                 , "editor::ScrollCursorCenter" ]],
      "          Shift-Down      ": [ "action::Sequence", [ "editor::SelectDown"                   , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-Down      ": [ "action::Sequence", [ "editor::AddSelectionBelow"            , "editor::ScrollCursorCenter" ]],
      " Ctrl-Alt-Shift-Down      ": [ "action::Sequence", [ "editor::DuplicateLineDown"            , "editor::ScrollCursorCenter" ]],
      "                Left      ": [ "action::Sequence", [ "editor::MoveLeft"                     , "editor::ScrollCursorCenter" ]],
      "           Ctrl-Left      ": [ "action::Sequence", [ "editor::MoveToPreviousWordStart"      , "editor::ScrollCursorCenter" ]],
      "          Shift-Left      ": [ "action::Sequence", [ "editor::SelectLeft"                   , "editor::ScrollCursorCenter" ]],
      "       Ctrl-Alt-Left      ": [ "action::Sequence", [ "editor::MoveToPreviousSubwordStart"   , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-Left      ": [ "action::Sequence", [ "editor::SelectToPreviousWordStart"    , "editor::ScrollCursorCenter" ]],
      " Ctrl-Alt-Shift-Left      ": [ "action::Sequence", [ "editor::SelectToPreviousSubwordStart" , "editor::ScrollCursorCenter" ]],
      "                Right     ": [ "action::Sequence", [ "editor::MoveRight"                    , "editor::ScrollCursorCenter" ]],
      "           Ctrl-Right     ": [ "action::Sequence", [ "editor::MoveToNextWordEnd"            , "editor::ScrollCursorCenter" ]],
      "          Shift-Right     ": [ "action::Sequence", [ "editor::SelectRight"                  , "editor::ScrollCursorCenter" ]],
      "       Ctrl-Alt-Right     ": [ "action::Sequence", [ "editor::MoveToNextSubwordEnd"         , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-Right     ": [ "action::Sequence", [ "editor::SelectToNextWordEnd"          , "editor::ScrollCursorCenter" ]],
      " Ctrl-Alt-Shift-Right     ": [ "action::Sequence", [ "editor::SelectToNextSubwordEnd"       , "editor::ScrollCursorCenter" ]],
      "                Enter     ": [ "action::Sequence", [ "editor::Newline"                      , "editor::ScrollCursorCenter" ]],
      "           Ctrl-Enter     ": [ "action::Sequence", [ "editor::NewlineBelow"                 , "editor::ScrollCursorCenter" ]],
      "          Shift-Enter     ": [ "action::Sequence", [ "editor::Newline"                      , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-Enter     ": [ "action::Sequence", [ "editor::NewlineAbove"                 , "editor::ScrollCursorCenter" ]],
      "                Backspace ": [ "action::Sequence", [ "editor::Backspace"                    , "editor::ScrollCursorCenter" ]],
      "           Ctrl-Backspace ": [ "action::Sequence", [ "editor::DeleteToPreviousWordStart"    , "editor::ScrollCursorCenter" ]],
      "            Alt-Backspace ": [ "action::Sequence", [ "editor::DeleteLine"                   , "editor::ScrollCursorCenter" ]],
      "       Ctrl-Alt-Backspace ": [ "action::Sequence", [ "editor::DeleteToPreviousSubwordStart" , "editor::ScrollCursorCenter" ]],
      "                Tab       ": [ "action::Sequence", [ "editor::Tab"                          , "editor::ScrollCursorCenter" ]],
      "           Ctrl-a         ": [ "action::Sequence", [ "editor::SelectAll"                    , "editor::ScrollCursorCenter" ]],
      "           Ctrl-d         ": [ "action::Sequence", [ "editor::SelectNext"                   , "editor::ScrollCursorCenter" ]],
      "            Alt-d         ": [ "action::Sequence", [ "editor::GoToDiagnostic"               , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-d         ": [ "action::Sequence", [ "editor::SelectPrevious"               , "editor::ScrollCursorCenter" ]],
      "      Alt-Shift-d         ": [ "action::Sequence", [ "editor::GoToPreviousDiagnostic"       , "editor::ScrollCursorCenter" ]],
      "           Ctrl-e         ": [ "action::Sequence", [ "editor::SelectEnclosingSymbol"        , "editor::ScrollCursorCenter" ]],
      "            Alt-f         ":                         "buffer_search::Deploy"                                                 ,
      "           Ctrl-l         ": [ "action::Sequence", [ "editor::SelectLine"                   , "editor::ScrollCursorCenter" ]],
      "           Ctrl-m         ":                         "editor::ToggleMinimap"                                                 ,
      "           Ctrl-v         ": [ "action::Sequence", [ "editor::Paste"                        , "editor::ScrollCursorCenter" ]],
      "           Ctrl-x         ": [ "action::Sequence", [ "editor::Cut"                          , "editor::ScrollCursorCenter" ]],
      "           Ctrl-z         ": [ "action::Sequence", [ "editor::Undo"                         , "editor::ScrollCursorCenter" ]],
      "     Ctrl-Shift-z         ": [ "action::Sequence", [ "editor::Redo"                         , "editor::ScrollCursorCenter" ]],
      "            Alt-[         ": [ "action::Sequence", [ "pane::GoBack"                         , "editor::ScrollCursorCenter" ]],
      "            Alt-]         ": [ "action::Sequence", [ "pane::GoForward"                      , "editor::ScrollCursorCenter" ]],
      "           Ctrl-{         ": [ "action::Sequence", [ "editor::Fold"                         , "editor::ScrollCursorCenter" ]],
      "           Ctrl-}         ": [ "action::Sequence", [ "editor::UnfoldLines"                  , "editor::ScrollCursorCenter" ]],
      "       Ctrl-Alt-{         ": [ "action::Sequence", [ "editor::FoldAll"                      , "editor::ScrollCursorCenter" ]],
      "       Ctrl-Alt-}         ": [ "action::Sequence", [ "editor::UnfoldAll"                    , "editor::ScrollCursorCenter" ]],
    },
  },
  {
    "context": "renaming > Editor && mode == single_line",
    "bindings": {
      " Enter ": "editor::ConfirmRename",
    },
  },
  {
    "context": "edit_prediction",
    "bindings": {
      " Tab ": "editor::AcceptEditPrediction",
    },
  },
  {
    "context": "showing_completions",
    "bindings": {
      " Escape ": "editor::Cancel",
      " Up     ": "editor::ContextMenuPrevious",
      " Down   ": "editor::ContextMenuNext",
      " Enter  ": "editor::ConfirmCompletion",
    },
  },
  {
    "context": "Editor && mode == single_line",
    "bindings": {
      "                PageUp    ": null,
      "          Shift-PageUp    ": null,
      "                PageDown  ": null,
      "          Shift-PageDown  ": null,
      "                Up        ": null,
      "            Alt-Up        ": null,
      "          Shift-Up        ": null,
      "     Ctrl-Shift-Up        ": null,
      " Ctrl-Alt-Shift-Up        ": null,
      "                Down      ": null,
      "            Alt-Down      ": null,
      "          Shift-Down      ": null,
      "     Ctrl-Shift-Down      ": null,
      " Ctrl-Alt-Shift-Down      ": null,
      "                Enter     ": null,
      "           Ctrl-Enter     ": null,
      "          Shift-Enter     ": null,
      "     Ctrl-Shift-Enter     ": null,
      "                Tab       ": null,
      "           Ctrl-space     ": null,
      "                Menu      ": null,
      "     Ctrl-Shift-a         ": null,
      "           Ctrl-d         ": null,
      "            Alt-d         ": null,
      "     Ctrl-Shift-d         ": null,
      "       Ctrl-Alt-d         ": null,
      "      Alt-Shift-d         ": null,
      "           Ctrl-e         ": null,
      "           Ctrl-j         ": null,
      "           Ctrl-[         ": null,
      "           Ctrl-]         ": null,
      "           Ctrl-{         ": null,
      "           Ctrl-}         ": null,
      "       Ctrl-Alt-{         ": null,
      "       Ctrl-Alt-}         ": null,
      "           Ctrl-/         ": null,
    },
  },
  {
    "context": "BufferSearchBar > Editor && mode == single_line",
    "bindings": {
      "       Escape ": "buffer_search::Dismiss",
      "       Up     ": "search::SelectPreviousMatch",
      "       Down   ": "search::SelectNextMatch",
      "   Alt-e      ": "search::ToggleRegex",
      "   Alt-q      ": "search::ToggleCaseSensitive",
      "   Alt-r      ": "search::ToggleReplace",
      "   Alt-w      ": "search::ToggleWholeWord",
    },
  },
  {
    "context": "BufferSearchBar && in_replace > Editor && mode == single_line",
    "bindings": {
      "    Enter ": "search::ReplaceNext",
      "Alt-Enter ": "search::ReplaceAll",
    },
  },
  {
    "context": "CommandPalette > Picker > Editor && mode == single_line",
    "bindings": {
      " Escape ": "menu::Cancel",
      " Up     ": "menu::SelectPrevious",
      " Down   ": "menu::SelectNext",
      " Enter  ": "menu::Confirm",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      " Alt-e ": null,
    },
  },
  {
    "context": "( ProjectPanel && menu && editing > Editor && mode == single_line ) || menu",
    "bindings": {
      " Escape ": "menu::Cancel",
      " Up     ": "menu::SelectPrevious",
      " Down   ": "menu::SelectNext",
      " Enter  ": "menu::Confirm",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "      F2        ":                         "project_panel::Rename"                                                 ,
      "      Escape    ":                         "workspace::CloseActiveDock"                                            ,
      "      Left      ":                         "project_panel::CollapseSelectedEntry"                                  ,
      "  Alt-Left      ":                         "project_panel::CollapseAllEntries"                                     ,
      "      Right     ":                         "project_panel::ExpandSelectedEntry"                                    ,
      "      Backspace ":                         "project_panel::Trash"                                                  ,
      "  Alt-Backspace ":                         "project_panel::Delete"                                                 ,
      "      Space     ":                         "project_panel::Open"                                                   ,
      "      Enter     ": [ "action::Sequence", [ "project_panel::OpenPermanent"         , "workspace::CloseActiveDock" ]],
      "  Alt-d         ":                         "project_panel::NewDirectory"                                           ,
      "  Alt-f         ":                         "project_panel::NewFile"                                                ,
      "  Alt-r         ":                         "project_panel::RemoveFromProject"                                      ,
    },
  },
  {
    "context": "Prompt",
    "bindings": {
      " Escape    ": "menu::Cancel",
      " Up        ": "menu::SelectPrevious",
      " Down      ": "menu::SelectNext",
      " Enter     ": "menu::Confirm",
      " Tab       ": "menu::SelectNext",
      " Shift-Tab ": "menu::SelectPrevious",
    },
  },
]
